@viewModel EventAdmin.PL.ViewModels.Sponsors.ListViewModel, EventAdmin.PL
@masterPage Views/MasterPage.dotmaster

<dot:Content ContentPlaceHolderID="MainContent">
    <div class="main-panel">
        <div class="">
            <br />
            <div class="container-fluid">
                <div class="container-fluid">
                    <!--Navbar-->
                    <div class="card card-plain">
                        <div class="card-header card-header-primary">
                            <h3 class="card-title"><b>{{value: Title}}</b></h3>
                            <p class="card-category">
                                {{value: Subtitle}}
                            </p>
                        </div>

                    </div>

                    <!---->

                    <div class="row">
                        <div class="col-md-12">
                            <dot:RouteLink Text="Create Sponsor" RouteName="CreateSponsor" class="btn btn-primary pull-right">
                            </dot:RouteLink>
                        </div>
                    </div>

                    <!--Content-->
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12 col-md-6 col-sm-6">
                                <div class="card card-stats">
                                    <div class="card-header card-header-success card-header-icon">
                                        <div class="card-icon">
                                            <i class="material-icons">account_box</i>
                                        </div>
                                        <p class="card-category"><b>Number of registered sponsors</b></p>
                                        <h2 class="card-title">
                                            {{value: Sponsors.Count}}
                                        </h2>
                                    </div>
                                    <div class="card-footer">
                                        <div class="stats">
                                            <i class="material-icons text">info</i>
                                            Number of sponsors currently registered in the database.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!--Table-->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header card-header-primary">
                                        <h4 class="card-title ">Sponsor List</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <dot:GridView DataSource="{value: Sponsors}" class="table">
                                                <Columns>

                                                    <dot:GridViewTextColumn ValueBinding="{value: IdSponsor}" HeaderText="ID" HeaderCssClass="text-primary" CssClass="text-primary" />
                                                    <dot:GridViewTextColumn ValueBinding="{value: Name}" HeaderText="Name" HeaderCssClass="text-primary" />

                                                    <dot:GridViewTemplateColumn>
                                                        <dot:RouteLink Text="" RouteName="DetailSponsor" Param-IdSponsor="{{value: IdSponsor}}" class="btn btn-primary btn-link btn-sm">
                                                            <i class="material-icons">visibility</i> Detail
                                                        </dot:RouteLink>
                                                    </dot:GridViewTemplateColumn>

                                                </Columns>

                                            </dot:GridView>


                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!--End Table-->

                    </div>
                </div>
            </div>
        </div>
    </div>

</dot:Content>

